<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Minimal working theme -->
    <style name="Theme.Guardian.Simple" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/guardian_blue</item>
        <item name="android:colorAccent">@color/guardian_green</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>

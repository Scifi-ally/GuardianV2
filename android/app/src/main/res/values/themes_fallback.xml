<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fallback theme if Material3 issues persist -->
    <style name="Theme.Guardian.Fallback" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/guardian_blue</item>
        <item name="colorPrimaryDark">@color/guardian_blue_dark</item>
        <item name="colorAccent">@color/guardian_green</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Remove action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>

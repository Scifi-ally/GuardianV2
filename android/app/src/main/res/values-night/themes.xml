<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme automatically applied in night mode -->
    <style name="Theme.GuardianSafety" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/guardian_blue_light</item>
        <item name="colorPrimaryDark">@color/guardian_blue_dark</item>
        <item name="colorAccent">@color/guardian_green_light</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_900</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/gray_900</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Emergency communications may require HTTP for local services -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Emergency services endpoints -->
        <domain includeSubdomains="true">emergency.local</domain>
        <domain includeSubdomains="true">guardian.local</domain>
    </domain-config>
    
    <!-- Production security for emergency APIs -->
    <domain-config>
        <domain includeSubdomains="true">api.guardiansafety.com</domain>
        <domain includeSubdomains="true">emergency.guardiansafety.com</domain>
        <pin-set expiration="2025-12-31">
            <pin digest="SHA-256">base64==</pin>
            <pin digest="SHA-256">backup-base64==</pin>
        </pin-set>
    </domain-config>
    
    <!-- Allow emergency communication even with certificate issues -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>

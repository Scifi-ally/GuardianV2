  "shortcuts": [
    {
      "name": "Emergency SOS",
      "short_name": "SOS",
      "description": "Quick access to emergency SOS features",
      "url": "/?action=sos",
      "icons": [
        {
          "src": "/icon-emergency-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Share Location",
      "short_name": "Share",
      "description": "Quickly share your current location",
      "url": "/?action=share",
      "icons": [
        {
          "src": "/icon-location-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Emergency Services",
      "short_name": "Services",
      "description": "Find nearby emergency services",
      "url": "/?action=services",
      "icons": [
        {
          "src": "/icon-services-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/call?number=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "captures": [
    {
      "where": "new-client",
      "media_type": "text/html"
    }
  ]
